@model LoginViewModel
@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="alert alert-danger d-flex justify-content-center" role="alert" asp-validation-summary="ModelOnly"></div>
<div class="d-flex justify-content-center">
    
    <form action="#" method="post">
        
        <!-- Email input -->
        <div class="form-outline mb-4">
            <input type="text" class="form-control" asp-for="Username" placeholder="Kullanıcı Adınız" required="">

        </div>

        <!-- Password input -->
        <div class="form-outline mb-4">
            <input type="password" class="form-control" asp-for="Password" placeholder="Şifreniz" required="">
        </div>

        <!-- 2 column grid layout for inline styling -->
        <div class="row mb-4">
            <div class="col d-flex justify-content-center">
                <!-- Checkbox -->
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="form2Example31" checked />
                    <label class="form-check-label" for="form2Example31"> Remember me </label>
                </div>
            </div>

            <div class="col">
                <!-- Simple link -->
                <a href="#!">Forgot password?</a>
            </div>
        </div>

        <!-- Submit button -->
        <button type="submit" class="btn btn-primary btn-block mb-4">Giriş Yap</button>

        <!-- Register buttons -->
        <div class="text-center">
            <p>Not a member? <a href="#!">Register</a></p>
            <p>or sign up with:</p>
            <button type="button" class="btn btn-link btn-floating mx-1">
                <i class="fab fa-facebook-f"></i>
            </button>

            <button type="button" class="btn btn-link btn-floating mx-1">
                <i class="fab fa-google"></i>
            </button>

            <button type="button" class="btn btn-link btn-floating mx-1">
                <i class="fab fa-twitter"></i>
            </button>

            <button type="button" class="btn btn-link btn-floating mx-1">
                <i class="fab fa-github"></i>
            </button>
        </div>
    </form>
</div>

